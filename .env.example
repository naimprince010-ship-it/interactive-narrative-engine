# Environment Variables Example
# Copy this file to .env.local or .env.production and fill in your values

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Payment Gateway Configuration
# bKash
BKASH_SECRET_KEY=your_bkash_secret_key_here
BKASH_MERCHANT_NUMBER=your_bkash_merchant_number
NEXT_PUBLIC_BKASH_API_URL=https://tokenized.sandbox.bka.sh/v1.2.0-beta

# Nagad
NAGAD_SECRET_KEY=your_nagad_secret_key_here
NAGAD_MERCHANT_NUMBER=your_nagad_merchant_number
NEXT_PUBLIC_NAGAD_API_URL=https://api.nagad.com

# Rocket
ROCKET_SECRET_KEY=your_rocket_secret_key_here
ROCKET_MERCHANT_NUMBER=your_rocket_merchant_number
NEXT_PUBLIC_ROCKET_API_URL=https://api.rocket.com

# Payment Amount (in BDT)
NEXT_PUBLIC_PREMIUM_CHAPTER_PRICE=10
